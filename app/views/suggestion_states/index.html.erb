<div class="col-lg-offset-3 col-lg-6">
  <h1>Listing Suggestion States</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Done</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @suggestion_states.each do |suggestion_state| %>
        <tr>
          <td><%= suggestion_state.name %></td>
          <td><%= raw('<i class="glyphicon glyphicon-ok"></i>') if suggestion_state.done %></td>
          <td class="text-right">
            <div class="btn-group">
              <%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'), edit_suggestion_state_path(suggestion_state), class: 'btn btn-xs btn-default' %>
              <%= link_to raw('<i class="glyphicon glyphicon-remove"></i>'), suggestion_state, class: 'btn btn-xs btn-default', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Suggestion state', new_suggestion_state_path, class: 'btn btn-sm btn-success' %>
</div>
