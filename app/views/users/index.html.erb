<div class="col-lg-offset-3 col-lg-6">
  <h1>Listing Users</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th data-toggle="tooltip" data-placement="top" data-container="body" data-title="Is an Admin?">A</th>
        <th data-toggle="tooltip" data-placement="top" data-container="body" data-title="Is on Suggestion Team?">ST</th>
        <th data-toggle="tooltip" data-placement="top" data-container="body" data-title="Wants SkunkWorks Info?">MN</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= get_user_popover_name(user, edit_user_path(user)) %></td>
          <td>
            <% if user.admin %>
              <i class="glyphicon glyphicon-ok"></i>
            <% end %>
          </td>
          <td>
            <% if user.suggestion_team_member %>
              <i class="glyphicon glyphicon-ok"></i>
            <% end %>
          </td>
          <td>
            <% if user.meeting_notice %>
              <i class="glyphicon glyphicon-ok"></i>
            <% end %>
          </td>
          <td class="text-right">          	
          	<%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'), edit_user_path(user), class: 'btn btn-xs btn-default' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>
