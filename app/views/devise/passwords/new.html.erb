
<div class="col-lg-offset-3 col-lg-6">
  <%= devise_error_messages! %>
  
  <div class= "col-sm-offset-2 col-sm-10">
  	<h2>Forgot your password?</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form', class: 'form-horizontal' }) do |f| %>
  	

    <!-- Email Address -->
    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email address...', class: 'form-control' %>
      </div>
    </div>

    <!-- Form Submit -->
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Reset Password', class: 'btn btn-primary' %>
      </div>      
    </div>

    <!-- Other Helper links -->
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= render "devise/shared/links" %>
      </div>      
    </div>

  <% end %>
</div>