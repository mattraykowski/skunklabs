<div class="col-lg-3">
	<%= render 'shared/suggestion_sidebar' %>
</div>

<div class="col-lg-9">
	<%= render partial: 'shared/form_errors', locals: { resource: @suggestion } %>
	<div class= "col-sm-offset-2 col-sm-10">
		<h2>New Suggestion
		<div class="btn-group">
			<%= link_to 'Back', suggestions_path, class: 'btn btn-xs btn-default' %>
		</div></h2>
	</div>

	<%= form_for(@suggestion, html: { role: 'form', class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
      	<%= f.label :title, class: 'col-sm-2 control-label' %>
      	<div class="col-sm-10">
          <%= f.text_field :title, class: 'form-control', placeholder: 'enter a brief title about your suggestion' %>
  	    </div>
      </div>

      <div class="form-group">
  	    <%= f.label :description, class: 'col-sm-2 control-label' %>
  	    <div class="col-sm-10 well">
          <%= f.text_area :description, class: 'form-control bswysiwyg', rows: 3, placeholder: 'enter a detailed description of your suggestion.' %>
  	    </div>
      </div>
  
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Submit Suggestion', class: 'btn btn-sm btn-success' %>
        </div>
      </div>
    <% end %>
</div>


















