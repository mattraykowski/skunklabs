<%= form_for([@lab, @link_resource], html: { role: 'form', class: 'form-horizontal' }) do |f| %>

  <div class="form-group">
    <%= f.label :lab_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <div class="form-control"><%= @lab.name %></div>
      <%= f.hidden_field :lab_id %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :url, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 well">
      <%= f.text_area :description, class: 'form-control bswysiwyg', rows: 3, placeholder: 'enter optional comment about the link, the purpose or what to expect.' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', class: 'btn btn-sm btn-success' %>
    </div>
  </div>
<% end %>
