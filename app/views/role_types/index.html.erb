<div class="col-lg-offset-3 col-lg-6">
  <h1>Listing Role Types</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @role_types.each do |role_type| %>
        <tr>
          <td><%= role_type.name %></td>
          <td class="text-right">          	
          	<div class="btn-group">              
              <%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'), edit_role_type_path(role_type), class: 'btn btn-xs btn-default' %>
              <%= link_to raw('<i class="glyphicon glyphicon-remove"></i>'), role_type, class: 'btn btn-xs btn-default', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Role type', new_role_type_path, class: 'btn btn-primary' %>
</div>
