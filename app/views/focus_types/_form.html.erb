<%= form_for(@focus_type, html: { role: 'form', class: 'form-horizontal' }) do |f| %>
  <% if @focus_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@focus_type.errors.count, "error") %> prohibited this focus_type from being saved:</h2>

      <ul>
      <% @focus_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
