  	<div class="col-sm-offset-2 col-sm-10">
      <div class="well">
      	<%= f.text_area :description, class: 'form-control bswysiwyg', rows: 5, placeholder: 'enter a detailed description of the types of labs that will have this focus type'  %>
      </div>
    </div>
  </div>
  <div class="form-group">
  	<div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
