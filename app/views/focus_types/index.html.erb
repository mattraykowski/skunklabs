<div class="col-lg-12 col-sm-12">
  <h1>Listing Focus Types</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @focus_types.each do |focus_type| %>
        <tr>
          <td><%= focus_type.name %></td>
          <td>
          	<p class="popover-html" data-title="Description" data-content="<%= focus_type.description ? focus_type.description : 'no description available' %>" data-placement="bottom" data-toggle="popover">
          	  <%= focus_type.description ? truncate(sanitize(focus_type.description, tags: []), length: 200) : 'no comment' %>
          	</p>
          </td>
          <td>
          	<div class="btn-group">
          	  <%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'), edit_focus_type_path(focus_type), class: 'btn btn-xs btn-default' %>
              <%= link_to raw('<i class="glyphicon glyphicon-remove"></i>'), focus_type, class: 'btn btn-xs btn-default', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Focus type', new_focus_type_path, class: 'btn btn-primary' %>
</div>
